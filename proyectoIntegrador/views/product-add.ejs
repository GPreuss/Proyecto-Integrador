				<input type="text" name="descripcion" placeholder="Descripcion del producto">
				<a style="color: aliceblue;">Fotos del producto</a>
				<input type="file" name="Foto del perfil">
				<button type="submit" title="Agregar" name="Ingresar"><a href="/product"> Agregar Producto</a></button>
			</form>
			


	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
