<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user) { %> 
		<%- include('partials/headerLogueado') %>
	<% } else { %>
		<%- include('partials/header') %>
	<% } %> 
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title" <%= productos.productName %></h2> <p class="product-detail-description">
				<a href="/product/add">Editar</a>
				</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= productos.imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= productos.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for(let i = 0; i < comentarios.length; i++ ) { %>
						<article>
							<img src="/images/users<%= comentarios[i].username.avatar%>" alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/users/profile/<%= comentarios[i].usuario.id %>"><%= comentarios[i].username.userName %>: </a> </strong>
									<%= comentarios[i].comentarioTexto %></p>
							</div>
						</article>
						<% } %>
					</section>
					<form class="form" action="/product/comentario/<%= productos.id %>" method="POST">
						<input class="form-input" type="text" name= texto value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>

</html>