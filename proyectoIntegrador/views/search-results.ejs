<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%-include('./partials/head.ejs', {titulo:'Resultado de busqueda - Mobile Now'})%>

<body>
	<!-- Header -->

	<% if (locals.user) { %> 
		<%- include('partials/headerLogueado') %>
	<% } else { %>
		<%- include('partials/header') %>
	<% } %>  

	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- mostrar resultados -->
			<% if (productos.length > 0 )%>
			<% for(let i = 0; i < productos.length; i++ ) { %>

			<div class="col-12 col-sm-6 col-lg-3">	
				<section class="product-box">
					 <a href="/product/detalle/<%= productos[i].id%>"> 
						<figure class="product-box_image">
							<img src="/images/products/<%=productos[i].imagen %>" alt="foto de <%= productos[i].nombre %>">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].productName%></h2>
							<p><%= productos[i].descripcion%></p>
							
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>